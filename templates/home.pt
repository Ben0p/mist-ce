<!DOCTYPE html>
<html xmlns:tal="http://xml.zope.org/namespaces/tal">

<head>
    <meta charset="utf-8">
    <meta content='True' name='HandheldFriendly' />
    <meta name="viewport" content="width=device-width; initial-scale=1; maximum-scale=1.0; user-scalable=0;">
    <meta name="viewport" content="width=device-width" />        
    <title>${project} - down to earth cloud computing</title>
    <!-- include the Tools -->
    <link rel="stylesheet" href="static/jquery.mobile-1.0.min.css" />
    <link rel="stylesheet" href="static/main.css" />
    <script src="static/jquery-1.6.4.js"></script>
    <script src="static/mist.js"></script>
    <script>
        var backends = [];
        var log = new MessageLog();
    </script>
    <!--from the python variable backends generate javascript entries-->
    <script tal:repeat="backend backends"
            tal:content="string:backends.push(new Backend('${backend['id']}',
                                                          '${backend['title']}',
                                                           ${backend['provider']},
                                                           ${backend['poll_interval']},
                                                           ${backend.host|'undefined'},
                                                           log));" />
    <script src="static/dom.js"></script>
    <script src="static/jquery.mobile-1.0.min.js"></script>
    <link rel="icon" href="static/favicon.ico" />
    <link rel="stylesheet" media="all" href=""/>
</head>

<body>

<!-- Start of first page: #one -->
<div data-role="page" id="one">

    <div data-role="header">
        <h1>mist.io</h1>
    </div><!-- /header -->

    <div data-role="content">
        <ul data-role="listview" data-theme="c" data-dividertheme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">
            <li id="one-li-machines"><a href="#machines">Machines<span class="ui-li-count">0</span></a></li>
            <li id="one-li-images"><a href="#images">Images<span class="ui-li-count">0</span></a></li>
        </ul>
    </div><!-- /content -->

</div><!-- /page one -->

<!-- Start of machines page: #machines -->
<div data-role="page" id="machines" data-theme="c">

    <div data-role="header">
        <a href="#one" data-icon="home" data-direction="reverse" class="ui-btn-left">Home</a>
        <h1>Machines</h1>
        <a href="#dialog-providers" data-rel="dialog" data-iconpos="notext" data-transition="slidedown" data-icon="check" class="ui-btn-right">All Providers OK</a>
    </div><!-- /header -->

    <div data-role="content">

        <div id="logo-container"></div>
        <li class="node-template" style="display:none">
            <input type="checkbox" class="custom" />
            <label></label>                
            <a href="#single-machine">
                <h3 class="name"></h3>
                <p class="state"></p>
                <span class="ui-li-count">tag1</span> <span class="ui-li-count">tag2</span>
                <span class="backend"></span>
            </a>
        </li>
        <select name="select-machines" id="mist-select-machines" data-native-menu="false">
            <option>Select Machines</option>
            <option value="all">All</option>
            <option value="none">None</option>
            <option value="filter">Current Filter</option>
            <optgroup label="By Provider" id="optgroup-providers">
                <option value="none">Amazon</option>
                <option value="none">Rackspace</option>
                <option value="none">OpenStack</option>
            </optgroup>
        </select>
        <a href="#dialog-add" id="mist-create-machine" data-rel="dialog" data-theme="c" data-inline="true" data-transition="slidedown" data-role="button" data-icon="plus" data-iconpos="notext"></a>
        <ul id="machines-list" data-role="listview" data-filter="true" data-inset="true" data-theme="c" data-dividertheme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow">

        </ul>


    </div><!-- /content -->

    <div id="machines-footer" data-role="footer" data-theme="a">   
        <div id="actions" data-role="controlgroup" data-type="horizontal">
            <a data-role="button" data-icon="refresh">Reboot</a>
            <a data-role="button" data-icon="delete">Destroy</a>
            <a href="#dialog-console" data-role="button" data-icon="gear" data-transition="slidedown">Console</a>
        </div>
    </div><!-- /footer -->

</div><!-- /machines page -->

<!-- Start of details page -->
<div data-role="page" id="single-machine" data-theme="c" class="type-interior">

    <div data-role="header">
        <a href="#machines" data-icon="arrow-l" data-direction="reverse" class="ui-btn-left">Machines</a>
        <h1>Machine name</h1>
        <a href="#dialog-providers" data-rel="dialog" data-iconpos="notext" data-transition="flip" data-icon="check" class="ui-btn-right">All Providers OK</a>
    </div><!-- /header -->

    <div data-role="content">

        <div data-role="collapsible">
            <h3>Basic Info</h3>
            Basic stuff
        </div>
        <div data-role="collapsible">
            <h3>Advanced Info</h3>
            Advanced stuff
        </div>

    </div><!-- /content -->

    <div id="machines-footer" data-role="footer" data-theme="a">   
        <div id="actions" data-role="controlgroup" data-type="horizontal">
            <a data-role="button" data-icon="refresh">Reboot</a>
            <a data-role="button" data-icon="delete">Destroy</a>
            <a href="#dialog-console" data-role="button" data-icon="gear" data-transition="slidedown">Console</a>
        </div>
    </div><!-- /footer -->

</div><!-- /details page -->

<!-- Start of add dialog -->
<div data-role="page" id="dialog-add" class="mist-dialog">
    <div data-role="content" data-theme="c">
        <h3>Create</h3>
        <input type="text" id="new-machine-name" > </input>
        <select name="select-choice-1" id="select-choice-1" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Provider</option>
        </select> 
        <select name="select-choice-1" id="select-choice-1" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Image</option>
            <option value="edit">1</option>
            <option value="delete">2</option>
            <option value="delete">3</option>
        </select>       
        <select name="select-choice-1" id="select-choice-1" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Size</option>
            <option value="edit">1</option>
            <option value="delete">2</option>
            <option value="delete">3</option>
        </select>       
        <div id="create-ok-cancel" data-role="controlgroup" data-type="horizontal">
            <a href="index.html" id="create-ok" data-role="button" data-rel="back" data-theme="c">OK</a>   
            <a href="index.html" id="create-cancel" data-role="button" data-rel="back" data-theme="c">Cancel</a>  
        </div>  
    </div>
</div><!-- /add dialog -->

<!-- Start of console dialog -->
<div data-role="page" id="dialog-console" class="mist-dialog">
    <div data-role="content" data-theme="a">
        <h3>Console</h3>
        <a href="index.html" data-role="button" data-rel="back" data-theme="a">Hide</a>    
    </div>
</div><!-- /console dialog -->

<!-- Start of providers dialog -->
<div data-role="page" id="dialog-providers" class="mist-dialog">
    <div data-role="content" data-theme="a">
        <h3>Provider Status</h3>
        <a data-icon="check" href="dialog-success.html" data-role="button" data-rel="dialog" data-transition="slidedown" data-theme="b">Amazon</a>     
        <a data-icon="check" href="dialog-success.html" data-role="button" data-rel="dialog" data-transition="slidedown" data-theme="b">Openstack</a>       
        <a data-icon="check" href="dialog-success.html" data-role="button" data-rel="dialog" data-transition="slidedown" data-theme="b">Rackspace</a>            
                  
        <a href="index.html" data-role="button" data-rel="back" data-transition="flip" data-theme="a">Back</a>    
    </div>
</div><!-- /providers dialog -->

</body>

</html>
