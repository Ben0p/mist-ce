<!DOCTYPE html>
<html xmlns:tal="http://xml.zope.org/namespaces/tal">

<head>
    <meta charset="utf-8">
    <meta content='True' name='HandheldFriendly' />
    <meta name="viewport" content="width=device-width; initial-scale=1; maximum-scale=1.0; user-scalable=0;">
    <meta name="viewport" content="width=device-width" />
    <title>${project} - down to earth cloud computing</title>
    <!-- include the Tools -->
    <link rel="stylesheet" href="static/jquery.mobile-1.1.0.min.css" />
    <link rel="stylesheet" href="static/main.css" />
    <link rel="icon" href="static/favicon.ico" />
    <link rel="stylesheet" media="all" href=""/>
    <script data-main="static/js/app.js" src="static/js/lib/require/require.js"></script>

</head>

<body>

<!-- Start of first page: #one -->
<div data-role="page" id="one">

    <div data-role="header">
        <h1>mist.io</h1>
    </div><!-- /header -->

    <div data-role="content">
        <a id="add-backend-button" href="#add-backend" class="add-button" data-rel="dialog" data-theme="b" data-inline="true" data-transition="slidedown" data-role="button" data-icon="plus"
             tal:condition="session">Add backend</a>

        <div data-role="controlgroup" data-type="horizontal" id="backend-buttons">
<script type="text/x-handlebars">
{{#each Mist.backendsController}}
    {{#view Mist.BackendButtonView backendBinding="this" }}
<a href="#edit-backend"
    data-rel="dialog"
    data-theme="c"
    data-inline="true"
    data-transition="slidedown"
    data-corners="false"
    data-shadow="false"
    data-role="button"
    {{action "openDialog" on="click"}}
    class="backend-status-{{unbound backend.status}}">{{backend.title}}  
    {{/view}}
{{/each}}
</script>

        </div>

        <ul data-role="listview" data-theme="c" data-dividertheme="d" class="ui-listview ui-listview-inset ui-corner-all ui-shadow" id="home-menu">
            <li id="one-li-machines"><a id="machines-count" href="#machines">Machines 
            <script type="text/x-handlebars">
            {{#view Mist.CountView numberBinding="Mist.backendsController.machineCount" tagName="span" class="ui-li-count"}}
            {{number}}
            {{/view}}
            </script>
            </a></li>
            <li id="one-li-images"><a id="images-count" href="#images">Images
            <script type="text/x-handlebars">
            {{#view Mist.CountView numberBinding="Mist.backendsController.imageCount" tagName="span" class="ui-li-count"}}
            {{number}}
            {{/view}}
            </script> 
            </a></li>
        </ul>
    </div><!-- /content -->

</div><!-- /page one -->


<!-- Start of add provider dialog -->
<div data-role="page" id="add-backend" class="mist-dialog">
    <div data-role="header">
        <h1>Add Backend</h1>
    </div>
    <div data-role="content" data-theme="c">
        <label for="select-backend">1. Provider:</label>
        <select name="select-backend" id="new-backend" class="create-select" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Select Provider</option>
            <optgroup label="Amazon EC2">
                <option value="1">US East - Virginia</option>
                <option value="36">US West - Oregon</option>
                <option value="10">US West - N. California</option>
                <option value="2">EU West - Ireland</option>
                <option value="22">Asia Pacific - Singapore</option>
                <option value="26">Asia Pacific - Tokio</option>
                <option value="39">South America - Sao Paulo</option>
            </optgroup>
            <optgroup label="Rackspace">
                <option value="3">US - DFW/ORD</option>
                <option value="23">UK - LON</option>
            </optgroup>
        </select>
        <label for="apikey">2. API Key:</label>
        <input name="apikey" type="text" id="new-apikey" ></input>
        <label for="apisecret">3. API Secret:</label>
        <input name="apisecret" type="text" id="new-apisecret" ></input>
        <div id="create-backend-cancel" class="btn-full" data-role="controlgroup" data-type="horizontal">
            <a id="create-backend-cancel" class="btn-left-full" data-role="button" data-rel="back" data-theme="c">Back</a>
            <a id="create-backend-ok" class="btn-right-full" data-role="button" data-rel="back" data-theme="b">Add</a>
        </div>
    </div>
</div><!-- /add backend dialog -->


<!-- Start of machines page: #machines -->
<div data-role="page" id="machines" data-theme="c">

    <div data-role="header">
        <a href="#one" data-icon="home" data-direction="reverse" class="ui-btn-left">Home</a>
        <h1>Machines</h1>
        <a class="state-providers" href="#dialog-providers" data-rel="dialog" data-iconpos="notext" data-transition="slidedown" data-icon="check" class="ui-btn-right"></a>
    </div><!-- /header -->

    <div data-role="content">

        <div id="logo-container"></div>
        
        <select name="select-machines" id="mist-select-machines" data-native-menu="false">
            <option>Select Machines</option>
            <option value="all">All</option>
            <option value="none">None</option>
            <optgroup label="By Provider" id="optgroup-providers">
                <option value="none">Amazon</option>
                <option value="none">Rackspace</option>
                <option value="none">OpenStack</option>
            </optgroup>
        </select>
        <a href="#dialog-add" id="mist-create-machine" data-rel="dialog" data-theme="b" data-inline="true" data-transition="slidedown" data-role="button" data-icon="plus">
        Create
        </a>
        <script type="text/x-handlebars">
        
        <ul id="machines-list" data-role="listview" data-filter="true" data-inset="true" data-theme="c" data-dividertheme="d" data-filter-placeholder="Filter machines..">
        {{#each Mist.backendsController}}        
        {{#each this.machines}}
        {{#view Mist.MachineListView machineBinding="this"}}

        {{/view}}
        {{/each}}
        {{/each}}
        </ul>
        </script>

    </div><!-- /content -->

    <div id="machines-footer" data-role="footer" data-theme="a">
        <div id="actions" data-role="controlgroup" data-type="horizontal">
            <a data-role="button" id="machines-button-reboot" data-icon="refresh">Reboot</a>
            <a data-role="button" id="machines-button-destroy" data-icon="delete">Destroy</a>
            <a id="machines-button-console" href="#dialog-console" data-role="button" data-icon="gear" data-transition="slidedown">Console</a>
            <a id="machines-button-tags" href="#dialog-tags" data-role="button" data-icon="grid" data-rel="dialog" data-transition="slidedown">Tag</a>
        </div>
    </div><!-- /footer -->

</div><!-- /machines page -->


<!-- Start of details page -->
<div data-role="page" id="single-machine" data-theme="c" class="type-interior">

    <div data-role="header">
        <a href="#machines" data-icon="arrow-l" data-direction="reverse" class="ui-btn-left">Machines</a>
        <h1 id="single-machine-name">Machine name</h1>
        <a class="state-providers" href="#dialog-providers" data-rel="dialog" data-iconpos="notext" data-transition="slidedown" data-icon="check" class="ui-btn-right"></a>
    </div><!-- /header -->

    <div id="single-view-header">
        <h3 id="single-view-name">Machine Name</h3>
        <span class="single-view-icon-wrapper"><span id="single-view-provider-icon"></span></span>
        <span class="single-view-icon-wrapper"><span id="single-view-image-icon"></span></span>
        <h3 id="single-view-status">Machine Status</h3>
    </div>

    <div data-role="content">

        <div id="inform-monitoring" tal:condition="session">Monitoring is currently disabled for this machine. <a id="enable-monitoring">Enable monitoring</a></div>
        <div data-role="collapsible" data-collapsed="false">
            <h3>Basic Info</h3>
            <span class="machine-basic-stuff"></span>

        </div>
        <div data-role="collapsible">
            <h3>Full metadata list</h3>
            <div id="machine-metadata"></div>
        </div>

    </div><!-- /content -->

    <div id="single-footer" data-role="footer" data-theme="a">
        <div id="actions" data-role="controlgroup" data-type="horizontal">
            <a data-role="button" id="single-button-reboot" data-icon="refresh">Reboot</a>
            <a data-role="button" id="single-button-destroy" data-icon="delete" data-transition="slidedown">Destroy</a>
            <a href="#dialog-console" data-role="button" id="single-button-console" data-icon="gear" data-transition="slidedown">Console</a>
            <a href="#dialog-tags" data-role="button" id="single-button-tags" data-icon="grid" data-rel="dialog" data-transition="slidedown">Tag</a>
        </div>
    </div><!-- /footer -->

</div><!-- /details page -->


<!-- Start of add dialog -->
<div data-role="page" id="dialog-add" class="mist-dialog">
    <div data-role="header">
        <h1>Create Machine</h1>
    </div>
    <div data-role="content" data-theme="c">
        <label for="create-machine-name">1. Name:</label>
        <input name="create-machine-name" type="text" id="new-machine-name" ></input>
        <label for="create-select-provider">2. Provider:</label>
        <select name="create-select-provider" id="create-select-provider" class="create-select" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Select Provider</option>
        </select>
        <label for="create-select-image">3. Image:</label>
        <select name="create-select-image" id="create-select-image" class="create-select" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Select Image</option>
            <option value="ami-31814f58">working in ec2</option>
            <option value="104">working in rack</option>
        </select>
        <label for="create-select-size">4. Size:</label>
        <select name="create-select-size" id="create-select-size" class="create-select" data-theme="c" data-icon="check" data-native-menu="false">
            <option>Select Size</option>
            <option value="t1.micro">working in ec2</option>
            <option value="1">working in rack</option>
        </select>
        <label for="create-machine-cost" class="select">Cost:</label>
        <input name="create-machine-cost" type="text" id="new-machine-name" class="ui-disabled" > </input>
        <div id="create-ok-cancel" class="btn-full" data-role="controlgroup" data-type="horizontal">
            <button id="create-cancel" class="btn-left-full" data-theme="c">Back</button>
            <button disabled="disabled" id="create-ok" class="btn-right-full" data-theme="b">Launch!</button>
        </div>
    </div>
</div><!-- /add dialog -->

<!-- Start of confirm dialog -->
<div data-role="dialog" id="dialog-confirm" data-transition="pop" class="mist-dialog">
    <div data-role="header">
        <h1 id="dialog-confirm-title"></h1>
    </div>
    <div data-role="content" data-theme="c">
        <p id="dialog-confirm-message"></p>
        <div data-role="controlgroup" class="btn-full" data-type="horizontal">
        <a id="dialog-confirm-no" class="btn-left-full" data-role="button" data-rel="back" data-theme="b">No</a>
        <a id="dialog-confirm-yes" class="btn-right-full" data-role="button" data-rel="back">Yes</a>
        </div>
    </div>
</div><!-- /confirm dialog -->

<!-- Start of console dialog -->
<div data-role="dialog" id="dialog-console" class="mist-dialog">
    <div data-role="content" data-theme="a">
        <h3>Console</h3>
        <a href="index.html" data-role="button" data-rel="back" data-theme="a">Hide</a>
    </div>
</div><!-- /console dialog -->

<!-- Start of provider status dialog -->
<div data-role="dialog" id="dialog-providers" class="mist-dialog">
    <div data-role="header">
        <h1>Provider Status</h1>
    </div>
    <div data-role="content">
        <ul id="providers-status-list" data-role="listview" data-inset="true" data-theme="c" data-dividertheme="d">
        </ul>
        <a href="index.html" data-role="button" data-icon="arrow-l" data-rel="back" data-transition="slidedown" data-theme="c">Back</a>
    </div>
</div><!-- /provider status dialog -->

<!-- Start of tags dialog -->
<div data-role="dialog" id="dialog-tags" class="mist-dialog">
    <div data-role="header">
        <h1>Manage Tags</h1>
    </div>
    <div data-role="content" data-theme="c">
        <div id="tags-container">
            <div id="tag-input">
                <input name="add-tag-name" type="text" id="add-tag-name" ></input>
                <a id="tag-add" data-role="button" data-theme="c">Add</a>
            </div>
            <ul id="tags-list">
                <li><a data-role="button" data-theme="c" data-icon="delete" data-inline="true" data-iconpos="notext" ></a>tag1</li>
                <li><a data-role="button" data-theme="c" data-icon="delete" data-inline="true" data-iconpos="notext" ></a>tag2</li>
                <li><a data-role="button" data-theme="c" data-icon="delete" data-inline="true" data-iconpos="notext" ></a>tag3</li>
                <li><a data-role="button" data-theme="c" data-icon="delete" data-inline="true" data-iconpos="notext" ></a>tag4</li>
        </div>
            <a id="tag-back" data-rel="back" data-role="button" data-transition="flip" data-theme="b">Back</a>
    </div>
</div><!-- /providers dialog -->


<!-- Start of images page: #images -->
<div data-role="page" id="images" data-theme="c">
    <div data-role="header">
        <a href="#one" data-icon="home" data-direction="reverse" class="ui-btn-left">Home</a>
        <h1>Machines</h1>
        <a class="state-providers" href="#dialog-providers" data-rel="dialog" data-iconpos="notext" data-transition="slidedown" data-icon="check" class="ui-btn-right"></a>
    </div><!-- /header -->
</div><!-- /images page -->

<div data-role="page" id="edit-backend" class="mist-dialog">
    <div data-role="header">
        <h1>Edit backend</h1>
    </div>
    <script type="text/x-handlebars">
    {{#view Mist.EditBackendView backendBinding="Mist.backend" }}
    {{/view}}
    </script>

</div><!-- /edit backend dialog -->


</body>

</html>
